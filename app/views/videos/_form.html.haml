= form_for @video, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :yt_video_id, :class => 'control-label'
    .controls
      = f.text_field :yt_video_id, :class => 'text_field'
  .control-group
    = f.label :is_complete, :class => 'control-label'
    .controls
      = f.check_box :is_complete, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), videos_path, :class => 'btn'
