- model_class = Video.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @videos.each do |video|
      %tr
        %td= link_to video.id, video_path(video)
        %td= video.title
        %td= video.description
        %td=l video.created_at
        %td
          = link_to t('.view', :default => t("helpers.links.view")), video_path(video), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_video_path(video), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), video_path(video), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_video_path, :class => 'btn btn-primary'
